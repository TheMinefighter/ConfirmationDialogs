<Window x:Class="ConfirmationDialogs.FastConfirmationWindow"
        Loaded="FastConfirmationWindow_OnLoaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ConfirmationDialogs"
        x:ClassModifier="internal"
        mc:Ignorable="d"
        Width="329" Height="156"
        d:DesignHeight="156.276" d:DesignWidth="329.288">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="5" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<TextBox x:Name="DescriptionTb" Margin="10,10,10,35" TextWrapping="Wrap" BorderBrush="Transparent" BorderThickness="0"
		         Background="Transparent" IsReadOnly="True" Grid.ColumnSpan="3" />
		<Button Grid.Column="0" x:Name="CancelBtn" Click="CancelBtn_OnClick" Content="" Margin="10,0,0,10"
		        RenderTransformOrigin="0.629,1.443" Height="20" VerticalAlignment="Bottom" />
		<Button x:Name="ConfirmBtn" Click="ConfirmBtn_OnClick" Content=""
		        Margin="0,0,10,10" Grid.Column="2" Height="20" VerticalAlignment="Bottom" />

	</Grid>
</Window>